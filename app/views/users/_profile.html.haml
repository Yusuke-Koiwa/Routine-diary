.user-header
  - if @user.id == current_user.id
    .user-header__left
      =link_to edit_user_path(@user) do
        .user-header__left__name
          = @user.name
        .user-header__left__img
          = image_tag @user.image.url
    .user-header__center
    .user-header__right

  - else
    .user-header__left
      .user-header__left__name
        = @user.name
      .user-header__left__img
        = image_tag @user.image.url
    .user-header__center