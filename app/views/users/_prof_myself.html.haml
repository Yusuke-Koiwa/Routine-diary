.user-header__left
  = link_to edit_user_path(@user) do
    .user-header__left__name
      = @user.name
    .user-header__left__img
      = image_tag @user.image.url

.user-header__center
  = link_to new_routine_path, class: "new-link" do
    = icon('fa', 'plus-circle', class: "new-link__icon")
  .routine-list
    - if @user.routines.length == 0
      .routine-list__message
        ← 習慣にしたいことを記入しよう！

    - @user.routines.each do |routine|
      .routine
        .routine__text-box
          .routine__text-box__content
            = routine.content
          .routine__text-box__start-date
            = "開始日：#{routine.created_at.strftime('%Y/%m/%d')}"
        .routine__icons
          = link_to edit_routine_path(routine) do
            = icon('fa', 'edit', class: "routine__icon routine__icon--edit")
          = link_to routine_path(routine), method: :delete, data: { confirm: '削除します。よろしいですか?' } do
            = icon('fa', 'trash-alt', class: "routine__icon routine__icon--destroy")

.user-header__right
  .continuous-days
    .count-top
      .count
        = @continuous_days
      .unit
        日
    .text
      継続中

  .done-days
    = "達成総日数：#{@done_days}日"