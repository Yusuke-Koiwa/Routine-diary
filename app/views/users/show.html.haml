.user-header
  .user-header__left
    .user-menu-list
      = link_to "#", class: "user-menu menu-link" do
        .user-menu__title
          ・フォロー：
        .user-menu__count
          100
      = link_to "#", class: "user-menu menu-link" do
        .user-menu__title
          ・フォロワー：
        .user-menu__count
          100
      = link_to "/praises/#{@user.id}/index", class: "user-menu menu-link" do
        .user-menu__title
          ・グッジョブ

    .user-box
      - if @user == current_user
        .user-info.user-info--link
          = link_to edit_user_path(@user) do
            .user-info__name
              = @user.name
            .user-info__img
              = image_tag @user.image.url
      - else
        .user-info
          .user-info__name
            = @user.name
          .user-info__img
            = image_tag @user.image.url
        - if current_user.already_followed?(@user)
          = link_to user_relationship_path(@user), class: "follow-btn follow-btn--on", method: :delete do
            フォロー中
        -else
          = link_to user_relationships_path(@user), class: "follow-btn follow-btn--off", method: :post do
            ＋ フォロー
  
  .user-header__center
    - if @user.id == current_user.id
      = render "routines_myself"
    - else
      = render "routines_others"

  .user-header__right
    .continuous-days
      .count-top
        .count
          = @continuous_days
        .unit
          日
      .text
        継続中

    .done-days
      = "達成総日数：#{@done_days}日"

= render "calendar"
