.user-menu-list
  = link_to follow_index_user_path(@user), class: "user-menu menu-link" do
    .user-menu__title
      ・フォロー：
    .user-menu__count
      = @user.follow_users.count
  = link_to follower_index_user_path(@user), class: "user-menu menu-link" do
    .user-menu__title
      ・フォロワー：
    .user-menu__count
      = @user.follower_users.count
  = link_to praises_index_user_path(@user), class: "user-menu menu-link" do
    .user-menu__title
      ・グッジョブ

.user-box
  - if @user == current_user
    .user-info.user-info--link
      = link_to edit_user_path(@user) do
        .user-info__name
          = @user.name
        .user-info__img
          = image_tag @user.image.url
        .user-info__edit
          編集
  - else
    .user-info
      = link_to user_path(@user) do
        .user-info__name
          = @user.name
        .user-info__img
          = image_tag @user.image.url

    .follow-content{id: "follow-#{@user.id}"}
      = render partial: "users/follow-btn", locals: { user: @user }